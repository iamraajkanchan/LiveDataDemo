<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.UserAddressDetail">

    <EditText
            android:id="@+id/edtUserAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="100dp"
            android:hint="Address"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
            android:id="@+id/edtUserStateName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"
            android:hint="State"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@+id/edtUserAddress" />

    <Button
            android:id="@+id/btnNextScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtUserStateName" />

</androidx.constraintlayout.widget.ConstraintLayout>